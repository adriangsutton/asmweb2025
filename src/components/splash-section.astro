---
import { Image } from "astro:assets";
import ViolinConcertoImage from "../images/violin-concerto.jpg";
import Rating from "fulldev-ui/components/Rating.astro";

const date = "23 April 2025";
const title = "VIOLIN CONCERTO";
---

<style>
  .splash {
    background-size: 100% 100%;
    background-position:
      0px 0px,
      0px 0px;
    background-image:
      radial-gradient(10% 10% at 50% 30%, #eeab2bff 0%, #073aff00 59%),
      conic-gradient(
        from 54deg at 50% 30%,
        #edc579 0%,
        #2e6280 11%,
        #eeab2b 76%,
        #edc579 96%
      );
  }

  @media (min-width: 768px) {
    .splash {
      background-size: 100% 100%;
      background-position:
        0px 0px,
        0px 0px;
      background-image:
        radial-gradient(10% 10% at 70% 50%, #eeab2bff 0%, #073aff00 59%),
        conic-gradient(
          from 54deg at 70% 50%,
          #edc579 0%,
          #2e6280 11%,
          #eeab2b 76%,
          #edc579 96%
        );
    }
  }

  .perspective {
    transform: rotate(0deg);

    /* Check for 3D transform support */
    @supports (transform: perspective(1px)) {
      -webkit-transform: perspective(200px) rotate3d(1, -1, 0, 2deg);
      -moz-transform: perspective(200px) rotate3d(1, -1, 0, 2deg);
      -ms-transform: perspective(200px) rotate3d(1, -1, 0, 2deg);
      transform: perspective(200px) rotate3d(1, -1, 0, 2deg);

      /* Hardware acceleration */
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
    }
  }
</style>
<div
  class="splash min-h-lvh flex flex-col-reverse pt-28 md:flex-row items-center justify-around gap-10 place-content-between p-10 pr-16 drop-shadow-2xl w-screen"
>
  <div class="flex-grow max-w-lg flex flex-col gap-4">
    <div class="w-full text-white flex flex-col gap-3">
      <h1 class="text-3xl md:text-5xl">
        {title}
      </h1>
      <p class="text-sm md:text-md lg:text-lg">
        We are hugely proud to announce that the Chandos release of Adrian's
        major orchestral works, including his recently-premiered Violin
        Concerto, has been nominated for the BBC Music Magazine's 2025 Premiere
        award!
      </p>
      <p class="text-sm md:text-md lg:text-lg">
        Recorded with the BBC Philharmonic Orchestra under Michael Seal, the
        release features the soloist Fenella Humphreys and in addition to the
        concerto includes Short Story, A Fist Full Of Fives, War Horse Suite and
        Five Theatre Miniatures
      </p>
    </div>
    <div class="flex flex-row gap-3 flex-wrap text-white">
      <div class="flex flex-col">
        <a
          href="https://www.classical-music.com/reviews/orchestral/adrian-sutton-violin-concerto-orchestral-works"
        >
          <Rating size="lg" score={5} />
          <small> BBC Music Magazine </small>
        </a>
      </div>
    </div>
    <hr
      class="h-px border-t-0 bg-transparent bg-gradient-to-r from-transparent via-white to-transparent opacity-100"
    />
    <div class="flex flex-row gap-3">
      <button
        onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth' })"
        class="btn bg-white text-black border-[#e5e5e5]"
      >
        <svg
          width="30"
          height="28"
          viewBox="0 0 45 58"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M9.54313 8.82768L27.4843 11.6434L10.9551 26.9334L9.54313 8.82768Z"
            fill="#EC922D"></path>
          <path
            d="M36.5406 7.00815L22.1807 45.7603L8.19851 37.0857L36.5406 7.00815Z"
            fill="#421C1A"></path>
        </svg>

        News & Events
      </button>
      <button
        onclick="document.getElementById('other-projects').scrollIntoView({behavior: 'smooth' })"
        class="btn bg-white text-black border-[#e5e5e5]"
      >
        <svg
          width="25"
          height="26"
          viewBox="0 0 43 28"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M5.69329 2.21084L24.097 7.10668L4.70968 21.2292L5.69329 2.21084Z"
            fill="#BC0F1E"></path>
          <path
            d="M27.7329 8.31412L39.4543 24.4976L10.5278 21.7791L27.7329 8.31412Z"
            fill="#E1602B"></path>
        </svg>
        Other Projects
      </button>
    </div>
  </div>
  <div class="w-1/2 max-w-md relative min-w-60 pl-2 md:pl-0">
    <svg
      width="50"
      height="79"
      viewBox="0 0 69 79"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="absolute top-1/2 -left-9 opacity-50"
    >
      <path
        opacity="0.5"
        d="M23.0653 28.2888L47.0742 78.2908L47.0092 35.9982L23.0653 28.2888Z"
        fill="url(#paint0_linear_205_281)"></path>
      <path
        opacity="0.5"
        d="M31.8786 7.49791L5.12806 19.1056L47.5453 32.0923L31.8786 7.49791Z"
        fill="url(#paint1_linear_205_281)"></path>
      <defs>
        <linearGradient
          id="paint0_linear_205_281"
          x1="49.4462"
          y1="38.3421"
          x2="28.3472"
          y2="60.2794"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-color="#BC0F1E"></stop>
          <stop offset="1" stop-color="#56070E"></stop>
        </linearGradient>
        <linearGradient
          id="paint1_linear_205_281"
          x1="31.8786"
          y1="7.49791"
          x2="24.4894"
          y2="31.6326"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-color="#EEAB2B"></stop>
          <stop offset="1" stop-color="#886219"></stop>
