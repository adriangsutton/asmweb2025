          x2="42.5078"
          y2="64.3389"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-color="#BC0F1E"></stop>
          <stop offset="1" stop-color="#56070E"></stop>
        </linearGradient>
        <linearGradient
          id="paint1_linear_205_288"
          x1="38.7384"
          y1="8.0028"
          x2="46.6252"
          y2="33.7628"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-color="#EEAB2B"></stop>
          <stop offset="1" stop-color="#886219"></stop>
        </linearGradient>
      </defs>
    </svg>
  </div>
</div>
