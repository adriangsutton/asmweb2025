---
import { Image } from "astro:assets";
import DownloadIcon from "../components/downloadIcon.astro";
const { mediaItem } = Astro.props;
---

<div
  class="media-item w-full p-2 bg-white/20 rounded-lg flex items-center justify-center relative overflow-hidden group cursor-pointer"
  data-tags={JSON.stringify(mediaItem.data.tags)}
>
  <div
    class="flex flex-row gap-2 absolute top-0 right-0 w-full justify-between items-center p-2 bg-black/50 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
    <p class="text-sm text-white truncate whitespace-nowrap" id="modal-title">
      {mediaItem.data.title}
    </p>
    <button
      class="btn btn-circle btn-sm btn-secondary download-btn text-primary"
      data-image-src={mediaItem.data.cover.src}
      data-image-name={mediaItem.data.title}
    >
      <DownloadIcon />
    </button>
  </div>
  <Image
    class="max-h-[250px] max-w-full rounded-lg object-cover"
    src={mediaItem.data.cover}
    alt={mediaItem.data.coverAlt}
    loading="lazy"
    decoding="async"
  />
  {
    mediaItem.data.attribution && (
      <div class="flex flex-row gap-2 absolute bottom-0 right-0 w-full items-center p-2 bg-black/50 opacity-0 transition-opacity duration-300 group-hover:opacity-100 text-secondary">
        <svg
          fill="currentColor"
          height="18px"
          width="18px"
          version="1.1"
          id="Capa_1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          viewBox="0 0 487 487"
          xml:space="preserve"
        >
          <g>
            <g>
              <path
                d="M308.1,277.95c0,35.7-28.9,64.6-64.6,64.6s-64.6-28.9-64.6-64.6s28.9-64.6,64.6-64.6S308.1,242.25,308.1,277.95z
			 M440.3,116.05c25.8,0,46.7,20.9,46.7,46.7v122.4v103.8c0,27.5-22.3,49.8-49.8,49.8H49.8c-27.5,0-49.8-22.3-49.8-49.8v-103.9
			v-122.3l0,0c0-25.8,20.9-46.7,46.7-46.7h93.4l4.4-18.6c6.7-28.8,32.4-49.2,62-49.2h74.1c29.6,0,55.3,20.4,62,49.2l4.3,18.6H440.3z
			 M97.4,183.45c0-12.9-10.5-23.4-23.4-23.4c-13,0-23.5,10.5-23.5,23.4s10.5,23.4,23.4,23.4C86.9,206.95,97.4,196.45,97.4,183.45z
			 M358.7,277.95c0-63.6-51.6-115.2-115.2-115.2s-115.2,51.6-115.2,115.2s51.6,115.2,115.2,115.2S358.7,341.55,358.7,277.95z"
              />
            </g>
          </g>
        </svg>
        <p
          class="text-sm text-white truncate whitespace-nowrap"
          id="modal-attribution"
        >
          {mediaItem.data.attribution}
        </p>
      </div>
    )
  }
</div>
